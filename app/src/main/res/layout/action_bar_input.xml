<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
    <EditText
            android:id="@+id/add_new_editer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:hint="@string/ui_add_new"
            android:minWidth="150dp"
            android:layout_toLeftOf="@+id/add_new_button">

        <requestFocus />
    </EditText>

    <Button
            android:id="@+id/add_new_button"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginRight="35dp"
            android:background="@android:drawable/ic_input_add"
            android:layout_marginEnd="35dp"
            android:layout_centerVertical="true" android:layout_toLeftOf="@+id/play_button"
            android:layout_toStartOf="@+id/play_button"/>
    <Button
            android:id="@+id/play_button"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@android:drawable/ic_media_play"
            android:layout_marginRight="36dp" android:layout_marginEnd="36dp"
            android:layout_alignTop="@+id/add_new_button" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_centerVertical="true"/>
</RelativeLayout>
